@model IEnumerable<GentelellaTemplate.Entities.ConsultaSolicitudesOBJ>

@{
    ViewBag.Title = "Solicitudes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section scriptsProyecto{

    @* ESTOS SCRIPTS SON PARA EL DATATABLE, EL JS ES PARA QUE APAREZCA EN ESPAÑOL *@

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            $('#ListaSolicitudes').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });
        });

    </script>
}

<h2>Lista de Solicitudes</h2>

@if (Session["Mensaje"] != null)
{
    <div class="alert alert-success" role="alert">
        @Session["Mensaje"]
    </div>
    Session["Mensaje"] = null;
}

<table id="ListaSolicitudes" class="display" style="text-align:center">
    <thead>
        <tr>
            <th>Nombre del Empleo</th>
            <th>Compania</th>
            <th>Categoria</th>
            <th>Reclutador</th>
            <th>Candidato</th>
            <th>Estado</th>
            <th>Opciones</th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.EMPLEO_NOMBRE </td>
                <td>@item.COMPANIA</td>
                <td>@item.categoria_descripcion</td>
                <td>@item.CORREO_RECLUTADOR</td>
                <td>@item.CORREO_CANDIDATO</td>
                <td>@item.ESTADO_PUESTO</td>
                <td style="text-align:center">

                    @*Mostrar contacto si Rol == 1, sino mostrar Info del empleo/solicitud*@
                    <input type="button" value="Ver más" class="btn btn-success"
                           onclick="location.href='@Url.Action("verSolicitud", "Solicitudes", new { q = item.id_solicitud })'">

                </td>
            </tr>
        }
    </tbody>
</table>



