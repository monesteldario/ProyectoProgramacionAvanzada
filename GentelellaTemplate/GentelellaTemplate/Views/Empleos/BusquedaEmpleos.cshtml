@model IEnumerable<GentelellaTemplate.Entities.EmpleosOBJ>

@{
    ViewBag.Title = "BusquedaEmpleos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scriptsProyecto{

    @* ESTOS SCRIPTS SON PARA EL DATATABLE, EL JS ES PARA QUE APAREZCA EN ESPAÑOL *@

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            $('#ListaEmpleos').DataTable({
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json"
                }
            });
        });

    </script>
}

<h2>Empleos Disponibles</h2>


<table id="ListaEmpleos" class="display" style="text-align:center">
    <thead>
        <tr>
            <th>Código</th>
            <th>Nombre del Puesto</th>
            <th>Companía</th>
            <th>Categoría</th>
            <th>Exp. Mínima</th>
            <th>Estudios requeridos</th>
            <th>Ver más</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_empleo  </td>
                <td>@item.empleo_nombre</td>
                <td>@item.compania</td>
                <td>@item.categoria_descripcion</td>
                <td>@item.exp_minima</td>
                <td>@item.grado_estudio</td>
                <td style="text-align:center">
                    <input type="button" value="Ver más" class="btn btn-success" 
                           onclick="location.href='@Url.Action("VerEmpleo", "Empleos", new { q = item.id_empleo })'">

                </td>
            </tr>
        }
    </tbody>

</table>